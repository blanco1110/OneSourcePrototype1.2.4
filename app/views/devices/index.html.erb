<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Imei number</th>
      <th>Device type</th>
      <th>Device color</th>
      <th>Device notes</th>
      <th>Customer</th>
      <th>Device version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.imei_number %></td>
        <td><%= device.device_type %></td>
        <td><%= device.device_color %></td>
        <td><%= device.device_notes %></td>
        <td><%= device.customer.customer_fname %></td>
        <td><%= device.device_version.device_version_name %></td>
        <td><%= device.customer.customer_fname %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

